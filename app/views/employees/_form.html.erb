<form>
  <fieldset>
    <legend><h2>Crear Empleado</h2></legend>

   
      <div class="field">
    <%= f.label :Foto %><br />
    <%= f.file_field :image %>
  </div>


  <div class="row">
    <div class="large-12 columns">
    <label><span data-tooltip aria-haspopup="true" class="has-tip" title="Favor escribir el nombre completo">Nombre Completo</span>
    <%= f.text_field :nombres %>
      </label>
    </div>
  </div>


  <div class="row">
    <div class="large-12 columns">
     <label><span data-tooltip aria-haspopup="true" class="has-tip" title="Favor escribir el apellido completo">Apellidos</span>
    <%= f.text_field :apellidos %>
    </label>
  </div>
  </div>



  <div class="row">
    <div class="large-6 columns">
    <label>DNI
    <%= f.text_field :ci %>
    </label>
  </div>
  
    <div class="large-6 columns">
    <label>Cargo
    <%= f.text_field :cargo %>
    </label>
  </div>
  </div>
 
  <div class="row">
    <div class="large-5 columns">
    <label>Numero Local
    <%= f.text_field :telefono %>
    </label>
  </div>
  
  <div class="large-2 columns">
    <label>Directo
    <%= f.text_field :ext %>
    </label>
  </div>

  <div class="large-5 columns">
    <label>Numero Celular
    <%= f.text_field :celular %>
    </label>
  </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
    <label>Correo
    <%= f.text_field :correo %>
    </label>
  </div>
  </div>






<div class="row">
    <div class="large-6 columns">
     <label><span data-tooltip aria-haspopup="true" class="has-tip" title="Favor colocar la sucursal">Sucursal de</span>
    <%= f.select :sucursal, options_for_select([["-Seleccione-", "-Seleccione-"], ["GPSA", "GPSA"], ["BER", "BER"], ["BSC", "BSC"], ["BSJ", "BSJ"], ["BSF", "BSF"]]) %>
    </label>
  </div>
 



    <div class="large-6 columns">
     <label><span data-tooltip aria-haspopup="true" class="has-tip" title="Favor colocar el area responsable">Area</span>
    <%= f.select :departamento, options_for_select([["-Seleccione-", "-Seleccione-"], ["Bases de Datos", "Bases de Datos"], ["Sistemas", "Sistemas"], ["IT", "IT"], ["Operador", "Operador"], ["Programador", "Programador"]]) %>
    </label>
  </div>
  </div>
 

<ul>
</ul>

