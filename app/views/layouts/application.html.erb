<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li> 
</ul> 
<section class="top-bar-section"> 


 <!-- Navegador derecho --> 
 <ul class="left"> 
 <li class="divider"></li>
 <li>
 <%= link_to 'Posts', posts_path %>
 </li>

 <li>
 <%= link_to 'Usuarios', users_path %> 
 </li>

 <li>
 <%= link_to 'Aportes', articles_path %>
 </li>

 <li>
 <%= link_to 'Empleados', works_path %>
 </li>

<!--
  <li>
 <%= link_to 'Peliculas', movies_path %>
 </li>
--> 


  <li>
 <%= link_to 'Sistemas', clients_path %>
 </li>



 <li>
 <%= link_to 'Tickets', tickets_path %>
 </li>

</ul>
    
   
<%
=begin %>

    <!-- Combo de ticket solo sera utilizado si se necesita lista desplegable --> 
     
      <li class="has-dropdown">
        <a href="#">Tickets</a>
        <ul class="dropdown">
          <li><a href="#"><%= link_to 'Crear Tickets', new_trouble_path %></a></li>
          <li><a href="#"><%= link_to 'Tickets', tickets_path %></a></li>
          <li><a href="#"><%= link_to 'Abiertos', abierto_path("abierto") %></a></li>
          <li><a href="#"><%= link_to 'Cerrados', cerrado_path("cerrado") %></a></li>
        </ul>
      </li>
    </ul>

<% 
=end %>





  <!-- Navegador izquierdo --> 
 <ul class="right"> 
 <li class="divider"></li> 

  <li>
 <%= link_to 'Contactanos', contacts_path %>
 </li>

