  </div>

   <div class="field">
    <%= f.label :Imagen %><br />
    <%= f.file_field :image %>
  </div>

 

<div class="field">
    <%= f.label :user_id %><br />
    <%= select("ticket", "user_id", User.find(:all).collect{|c| [c.name, c.id] }) %>
  </div>


  <div class="field">
    <%= f.label :status %><br />
    <%= f.number_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
